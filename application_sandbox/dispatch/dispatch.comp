#version 430

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout (binding = 0, set = 0) buffer a2{
  float data[1];
};

void main() {
  uint index = gl_GlobalInvocationID.x;
  int d = int(data[index]);
  d = d % 120;
  if(d > 60) {
    d = 120 - d;
  }
  data[index] = d / 60.0;
}
